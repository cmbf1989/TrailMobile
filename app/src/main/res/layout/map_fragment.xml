<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="info.androidhive.materialtabs.fragments.OneFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="EstatÃ­sticas"
                    android:id="@+id/textView12"
                    android:textColor="#125688"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_button"
                    android:src="@mipmap/ic_start_competition"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="start_button"
                    android:background="@drawable/defaultborder" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Velocidade"
                    android:id="@+id/textView6"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/labelmedium_blue"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0 km/h"
                    android:id="@+id/speed_label"
                    android:background="@drawable/inputtextright_blue_stroke"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textColor="#337ab7"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tempo "
                    android:id="@+id/textView8"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/labelmedium_blue"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <Chronometer
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/time_spent"
                    android:background="@drawable/inputtextright_blue_stroke"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textColor="#337ab7"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="37dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Percorrido"
                    android:id="@+id/textView7"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/labelmedium_blue"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0 / 0 (m)"
                    android:id="@+id/distance"
                    android:background="@drawable/inputtextright_blue_stroke"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textColor="#337ab7"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/map_container"
            android:layout_margin="10dp"
            android:baselineAligned="false"
            android:clickable="false"
            android:background="@drawable/shape_blue_background"
            android:touchscreenBlocksFocus="false"
            android:padding="5dp">
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>